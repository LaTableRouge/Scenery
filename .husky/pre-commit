#!/bin/sh

red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
blue='\033[0;34m'
no_color='\033[0m'

# Prevent commits in master branch
branch="$(git rev-parse --abbrev-ref HEAD)"

if [ "$branch" = "master" ] || [ "$branch" = "main" ]; then
  echo ""
  echo -e "${red}( う-´)づ︻╦̵̵̿╤──  \(˚☐˚”)/ [ERROR] You can't commit directly to master/main branch ❗${no_color}"
  echo ""
  exit 1
fi

if [ "$branch" = "release/demo-deploy" ] || [ "$branch" = "release/prod-deploy" ] || [ "$branch" = "release/dev-deploy" ]; then
  echo ""
  echo -e "${red}( う-´)づ︻╦̵̵̿╤──  \(˚☐˚”)/ [ERROR] You can't commit directly to release/xx-deploy branch ❗${no_color}"
  echo ""
  exit 1
fi

echo ""
echo -e "${blue}(╭ರ_•́) Git Precommit Checks  (╭ರ_•́)${no_color}"
echo ""

exec >/dev/tty 2>&1

# Check if npx is available locally, otherwise use Docker container
if command -v npx >/dev/null 2>&1; then
  npx --no-install git-precommit-checks
  npx --no-install lint-staged
elif command -v docker >/dev/null 2>&1; then
  docker compose exec -T docker_app npx --no-install git-precommit-checks
  docker compose exec -T docker_app npx --no-install lint-staged
else
  echo -e "${red}Error: Neither npx nor Docker is available. Please install Node.js or start the Docker container.${no_color}"
  exit 1
fi

