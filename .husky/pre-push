#!/bin/sh

red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
blue='\033[0;34m'
no_color='\033[0m'

echo ""
echo -e "${blue}(╭ರ_•́) Validate Branch Name  (╭ರ_•́)${no_color}"
echo ""

# Check if npx is available locally, otherwise use Docker container
if command -v npx >/dev/null 2>&1; then
  npx --no-install validate-branch-name
elif command -v docker >/dev/null 2>&1; then
  docker compose exec -T docker_app npx --no-install validate-branch-name
else
  echo -e "${red}Error: Neither npx nor Docker container is available. Please install Node.js or start the Docker container.${no_color}"
  exit 1
fi
