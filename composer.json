{
	"authors": [
		{
			"name": "LaTableRouge",
			"homepage": "https://mlnop.fr",
			"role": "Simple man"
		}
	],
	"require-dev": {
		"friendsofphp/php-cs-fixer": "3.92.5",
		"wp-cli/wp-cli-bundle": "2.12.0",
		"phpstan/phpstan": "^2.1.33",
		"squizlabs/php_codesniffer": "^4.0.1"
	},
	"scripts": {
		"prettier:php": "vendor/bin/php-cs-fixer fix -v --show-progress=dots --using-cache=no --config=linters/.php-cs-fixer.php index.php includes",
		"lint:php": "vendor/bin/phpstan --configuration=linters/phpstan.neon analyse -v --memory-limit=2048M index.php includes",
		"lint-staged:php": [
			"vendor/bin/phpstan --configuration=linters/phpstan.neon analyse -v --memory-limit=2048M",
			"vendor/bin/php-cs-fixer fix -v --show-progress=dots --using-cache=no --config=linters/.php-cs-fixer.php"
		]
	}
}
