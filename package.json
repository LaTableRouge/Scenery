{
	"name": "scenery",
	"version": "2.0.0",
	"description": "## VHosts",
	"main": "vite.config.js",
	"scripts": {
		"prepare": "husky",
		"test": "echo \"Error: no test specified\" && exit 1",
		"watch": "vite",
		"build": "vite build",
		"lint:scss": "npx stylelint --config linters/stylelint.config.js --ignore-path linters/.stylelintignore --allow-empty-input --fix src/styles/**/*.scss",
		"prettier:scss": "npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write src/styles/**/*.scss",
		"lint:js": "npx eslint --config linters/eslint.config.js --no-error-on-unmatched-pattern --fix src/scripts/**/*.js",
		"prettier:js": "npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write src/scripts/**/*.js",
		"prettier:json": "npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write {composer.json,package.json}",
		"lint:md": "npx markdownlint-cli2 --config linters/.markdownlint.json --fix */**/*.md !**/node_modules/** !**/vendor/**",
		"lint:php": "composer run lint:php",
		"prettier:php": "composer run prettier:php",
		"beautify:all": "npm run prettier:scss && npm run lint:scss && npm run prettier:js && npm run lint:js && npm run lint:md && npm run prettier:json && npm run lint:md && npm run prettier:php && npm run lint:php"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MLNOP/Scenery.git"
	},
	"keywords": [
		"scenery",
		"astronomy-engine"
	],
	"author": "MLNOP",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/MLNOP/Scenery/issues"
	},
	"homepage": "https://github.com/MLNOP/Scenery#readme",
	"devDependencies": {
		"@babel/runtime": "^7.28.6",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@mlnop/string-replace": "^2.0.0",
		"@mlnop/vite-plugin-sass-glob-import": "^6.1.0",
		"autoprefixer": "^10.4.23",
		"browserslist": "^4.28.1",
		"copy-webpack-plugin": "^13.0.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-n": "^17.23.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.5.5",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-destructure-keys": "^2.0.0",
		"eslint-plugin-unused-imports": "^4.3.0",
		"eslint-plugin-yml": "^2.0.0",
		"git-precommit-checks": "^3.1.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"markdownlint-cli2": "^0.20.0",
		"prettier": "^3.8.0",
		"sass": "^1.97.2",
		"sass-loader": "^16.0.6",
		"stylelint": "^16.19.1",
		"stylelint-config-property-sort-order-smacss": "^10.0.0",
		"stylelint-config-sass-guidelines": "^12.1.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.1",
		"validate-branch-name": "^1.3.2",
		"vite": "^7.3.1",
		"vite-plugin-static-copy": "^3.1.4"
	},
	"dependencies": {
		"astronomy-engine": "^2.1.19"
	},
	"lint-staged": {
		"**/*.md": [
			"npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write",
			"npx markdownlint-cli2 --config linters/.markdownlint.json --fix"
		],
		"**/*.{yml,yaml}": [
			"npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write"
		],
		"**/*.json": [
			"npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write"
		],
		"**/*.twig": [
			"composer lint-staged:twig"
		],
		"**/*.php": [
			"composer lint-staged:php"
		],
		"**/*.scss": [
			"npx stylelint --config linters/stylelint.config.js --ignore-path linters/.stylelintignore --allow-empty-input --fix",
			"npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write",
			"npx stylelint --config linters/stylelint.config.js --ignore-path linters/.stylelintignore --allow-empty-input --fix"
		],
		"**/*.{mjs,js,jsx,ts,tsx}": [
			"npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write",
			"npx eslint --config linters/eslint.config.js --no-error-on-unmatched-pattern --fix"
		]
	},
	"validate-branch-name": {
		"pattern": "^(main|master|srv/dev|srv/pre)$|^(feature|fix|hotfix|experimental|minor|major|release)/.+$",
		"errorMsg": "ðŸ¤¨ The branch you're trying to push doesn't respect our conventions, you can rename it with `git branch -m <current-name> <new-name>`"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"build",
					"chore",
					"docs",
					"feat",
					"fix",
					"refactor",
					"revert",
					"style",
					"wordpress",
					"wp"
				]
			]
		}
	},
	"git-precommit-checks": {
		"display": {
			"notifications": true,
			"offendingContent": true,
			"rulesSummary": false,
			"shortStats": true,
			"verbose": false
		},
		"rules": [
			{
				"message": "Have you forgotten to finish some tasks?",
				"nonBlocking": true,
				"regex": "/(?:FIXME|TODO)/"
			},
			{
				"message": "You have conflict markers lying around",
				"regex": "/^[<>|=]{4,}/m"
			},
			{
				"message": "Commit stopped: you've entered information that must not be committed!",
				"regex": "/do not commit/i"
			},
			{
				"filter": "/\\.js$/",
				"message": "ðŸ¤” Hum! Didn't you forget to remove from \"console.log(...)\"?",
				"nonBlocking": true,
				"regex": "/^\\s*console\\.log/"
			}
		]
	},
	"browserslist": [
		"last 2 version"
	]
}
